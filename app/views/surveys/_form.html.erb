<%= semantic_form_for @survey do |f| %>
  <%= f.input :name, :as => :string, :label => "Survey Title" %>
  <%= f.semantic_fields_for :questions do |builder| %>
    <%= render "question_fields", :f => builder %>
  <% end %>
  <%= link_to_add_fields("Add Question", f, :questions, "btn btn-primary") %>
  <%= f.actions do %>
    <%= f.action :submit, :button_html => {:class => "btn"}  %>
    <%= f.action :cancel, :button_html => {:class => "btn btn-danger"} %>
  <% end %>
<% end %>

