<%= f.inputs do %>
  <%= f.input :content, :label => "Question" %> 
  <%= f.input :_destroy, :as => :hidden %>
  <%= link_to "remove question", '#', class: "remove_fields indent", remote: true %>
  <%= f.semantic_fields_for :answers do |answer| %>
    <%= render "answer_fields", :f => answer %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :answers, "btn btn-primary indent"%>
<% end %>